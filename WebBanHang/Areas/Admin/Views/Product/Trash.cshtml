@model IEnumerable<WebBanHang.Context.Product_0242>

@{
    ViewBag.Title = "Trash";
}

<h2 class="text-center">Thùng Rác</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrandId)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceDiscount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeId)
        </th>
        
     
        <th>
            @Html.DisplayNameFor(model => model.Deleted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Avatar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandId)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceDiscount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeId)
        </td>
       
      
        <td>
            @Html.DisplayFor(modelItem => item.Deleted)
        </td>
        <td>
            <a href="@Url.Action("Restore", "Product", new { id = item.Id })" style="display:flex;align-items:center;">
                <i class="fas fa-trash-restore" style="margin-right:2px;color:green"></i> Restore|
            </a>
            <a href="@Url.Action("Delete", "Product",new { id=item.Id })" style="display: flex;align-items: center;">
                <i class="fas fa-trash" style="margin-right:2px;color:red;"></i> Delete
            </a>
        </td>
    </tr>
}

</table>
